@model List<MVCMovieDB.Models.Movie>
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}



<h2> Movie List </h2>

<div id="movietable" class="form-horizontal">

    <table class="table table-hover">
        <tr>
            <th> Movie </th>
            <th> Genre </th>
        </tr>

        @foreach (var movie in Model)
        {
            <tr>
                <td>
                    @Html.ActionLink(movie.Name, "Edit", movie)
                </td>
                <td>
                    @movie.Genre
                </td>
            </tr>
        }
    </table>
    <a href='@Url.Action("New", "Movies")' class="btn btn-primary">Add New Movie</a>

</div>
